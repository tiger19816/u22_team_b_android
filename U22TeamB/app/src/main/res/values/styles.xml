<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#808080</item>
        <item name="android:typeface">monospace</item>
    </style>

    <!-- レフトナビ用 -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 【夫】背景色 -->
    <style name="maleBack" >
        <item name="android:background">#F2FFFF</item>
    </style>

    <!-- 【夫】ボタン -->
    <style name="maleButton">
        <item name="android:background">#536dfe</item>
        <item name="android:textColor">#F2FFFF</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- 【妻】背景色 -->
    <style name="femaleBack" >
        <item name="android:background">#F2FFFF</item>
    </style>

    <!-- 【妻】ボタン -->
    <style name="femaleButton">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">#F2FFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- カスタムベーステーマを追加 -->
    <style name="MyCustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- カスタムベーステーマを継承するテーマを追加(夫用) -->
    <style name="MyCustomTheme.Default" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="customTextColor">#536dfe</item>
        <item name="colorPrimary">#536dfe</item>
        <item name="colorAccent">#536dfe</item>
        <item name="colorPrimaryDark">#536dfe</item>
    </style>

    <!-- カスタムベーステーマを継承するテーマを追加(妻用) -->
    <style name="MyCustomTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="customTextColor">#FF4081</item>
        <item name="colorPrimary">#FF4081</item>
        <item name="colorAccent">#FF4081</item>
        <item name="colorPrimaryDark">#FF4081</item>
    </style>

</resources>
