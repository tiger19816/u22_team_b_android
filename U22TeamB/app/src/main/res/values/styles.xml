<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#808080</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="maleTopTitle" parent="maleTextBig">
        <item name="android:textColor">#212121</item>
    </style>
    <style name="maleMain" >
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">#F2FFFF</item>
</style>
    <style name="maleMainButton" parent="maleTextMiddle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#536dfe</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="primaryText">
        <item name="android:textColor">#212121</item>
    </style>
    <style name="secondaryText">
        <item name="android:textColor">#757575</item>
    </style>
    <style name="itemText" parent="maleTextSmall">
        <item name="android:textColor">#757575</item>
    </style>
    <style name="maleTextBig">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="maleTextMiddle">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="maleTextSmall">
        <item name="android:textSize">15sp</item>
    </style>


  <!-- レフトナビ用 -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
